<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopUp">
        <item name="android:paddingTop">@dimen/standard_padding</item>
        <item name="android:paddingBottom">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PopUp.VerticalDivider">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider</item>
    </style>

    <style name="Icon">
        <item name="android:layout_marginRight">16dp</item>
    </style>


    <style name="QuestionaireScaleDescription">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/standard_padding</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/questionaire_scale_description_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="QuestionaireRadioGroup">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="QuestionaireSectionDivider">
        <item name="android:paddingTop">@dimen/standard_padding</item>
    </style>

    <style name="QuestionaireRadioButton">
        <item name="android:paddingLeft">@dimen/questionaire_padding</item>
        <item name="android:paddingRight">@dimen/questionaire_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SendButton">
        <item name="android:layout_marginTop">@dimen/standard_padding</item>
        <item name="android:layout_marginBottom">@dimen/standard_padding</item>
    </style>

</resources>
